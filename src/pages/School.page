<apex:page standardController="School__c" >
    <apex:form >
        
        <apex:pageBlock title="Edit School">

            <apex:pageBlockSection columns="1">
                <apex:inputField value="{!School__c.Name}"/>
                <apex:inputField value="{!School__c.City__c}"/>
                <apex:inputField value="{!School__c.SchoolCapacity__c}"/>
                
            </apex:pageBlockSection>

            <apex:pageBlockButtons >
                <apex:commandButton action="{!save}" value="Save"/>
            </apex:pageBlockButtons>

        </apex:pageBlock>
        
    </apex:form>
</apex:page>