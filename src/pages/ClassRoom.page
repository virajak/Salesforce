<apex:page standardController="Classroom__c" >
    <apex:form >
        
        <apex:pageBlock title="Edit Classroom">

            <apex:pageBlockSection columns="1">
            <h1>Enter Details below</h1>
                <apex:inputField value="{!Classroom__c.Name}"/>
                <apex:inputField value="{!Classroom__c.Capacity__c}"/>
                <apex:inputField value="{!Classroom__c.location__c}"/>
                <apex/>
            </apex:pageBlockSection>

            <apex:pageBlockButtons >
                <apex:commandButton action="{!save}" value="Save"/>
            </apex:pageBlockButtons>

        </apex:pageBlock>
        
    </apex:form>
</apex:page>